#include <iostream>

using namespace std;

int main()
{
    double PI=3.14159;
    double r,d,C,S;
    cin>> r ;
    d=2*r;
    C=2*PI*r;
    S=PI*r*r;

    cout<< d <<" "<<C<<" "<<S;

    return 0;
}
